<!DOCTYPE html>
<html>
<head>
  <title>Univercity</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%=params[:controller]%> <%=params[:action]%>">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "UniverCity", home_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Find", home_path %></li>
          <li><%= link_to "Create Opportunity", new_opportunity_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <%unless user_signed_in?%>
            <li <%= log_out_hide %>><%= link_to "Log in", new_user_session_path %></li>
            <li <%= log_out_hide %>><%= link_to "Sign up", new_user_registration_path %></li>
          <% end %>
          <%if user_signed_in?%>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= if_current_user_name %><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Opportunities", opportunities_path %></li>
                  <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
                </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <%= yield %>

</body>
</html>
